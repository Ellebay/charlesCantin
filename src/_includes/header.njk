<header
  class="nav navbar-expand-lg fixed-top">
  <!-- Container wrapper -->
  <div
    class="container-fluid">
    <!-- Toggle button -->
    <button
      class="navbar-toggler"
      type="button"
      data-mdb-toggle="collapse"
      data-mdb-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>
    <!-- Collapsible wrapper -->
    <div
      class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Navbar brand -->
      <a class="navbar-brand mt-2 mt-lg-0" href="/accueil">{% EleventyImage "/images/logo.png", "Logo - Charles Cantin", "159.035% 285.526%" %}</a>
      <div class="collapse navbar-collapse"></a>
      <!-- Right links -->
      {% if navigation.items %}
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          {% for item in navigation.items %}
            <li class="nav__item">
              <a class="nav-link {{ 'active' if item.url in page.url }}" href="{{ item.url }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
